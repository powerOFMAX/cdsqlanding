---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Code Square LLC | Software Services & Development',
  description = 'Code Square LLC provides strategic software consulting and full-stack development for modern teams.',
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <link rel="icon" type="image/png" href="/logo-codesquare.png" />
    <link rel="apple-touch-icon" href="/logo-codesquare.png" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
